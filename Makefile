NAME = libftprintf.a

SRCS = ft_printf.c ft_printf_utils.c 

#SRCBONUS = ft_printf_bonus.c 

OBJS = $(SRCS:.c=.o)

#OBJSBONUS = $(SRCBONUS:.c=.o)

CC		= cc
RM		= rm -f
AR		= ar rcs

CFLAGS = -Wall -Wextra -Werror

.c.o:
		$(CC) $(CFLAGS) -c $< -o $(<:.c=.o)

$(NAME): $(OBJS)
		$(AR) $(NAME) $(OBJS)
		@echo "CompilaciÃ³n terminada: $@"
		@make info

#bonus: .bonus

#.bonus: $(OBJSBONUS)
#		$(AR) $(NAME) $(OBJSBONUS)
#		@touch .bonus
#		@make info

all:	$(NAME)

clean:
		$(RM) $(OBJS) $(OBJSBONUS)

fclean:	clean
		$(RM) $(NAME) .bonus

re:		fclean all

.PHONY : all clean fclean re info #bonus

